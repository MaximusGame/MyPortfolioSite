@{
    ViewBag.Title = "Home Page";
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
    <link href="~/node_modules/swiper/dist/css/swiper.min.css" rel="stylesheet" />
    <!-- Demo styles -->
    <style>
        body {
            background-image: url('../../Images/fon.jpg');
            font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
            font-size: 14px;
            color: #000;
            margin: 0;
            padding: 0;
        }

        .swiper-container {
            width: 100%;
            padding-top: 10px;
            padding-bottom: 50px;
        }

        .swiper-slide {
            background-position: center;
            background-size: cover;
            width: 450px;
            height: 250px;
        }
         
    </style>
</head>
<body>
    <h2 class="text-center text-danger">Projects in which I participated</h2>
    <!-- Swiper -->
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div>
                    <img width="450" height="250" src="~/Images/Arena.png" />
                </div>
            </div>
            <div class="swiper-slide">
                <div>
                    <img width="450" height="250" src="~/Images/TVout.png" />
                </div>
            </div>
            <div class="swiper-slide">
                <div>
                    <img width="450" height="250" src="~/Images/ScreechOfSteel.jpg" />
                </div>
            </div>
            <div class="swiper-slide">
                <div>
                    <img width="450" height="250" src="~/Images/Animation.png" />
                </div>
            </div>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
    </div>

    <script src="~/node_modules/swiper/dist/js/swiper.min.js"></script>
    <!-- Initialize Swiper -->
    <script>
        var swiper = new Swiper('.swiper-container', {
            effect: 'coverflow',
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: 'auto',
            coverflowEffect: {
                rotate: 50,
                stretch: 0,
                depth: 100,
                modifier: 5,
                slideShadows: true,
            },
            pagination: {
                el: '.swiper-pagination',
            },
        });
    </script>

</body>
</html>
